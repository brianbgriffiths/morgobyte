# This file is only necessary for server deployments and does NOT need to be used for a local setup

# Django settings
SECRET_KEY=your-secret-key-here
DEBUG=True

# Allowed hosts for deployment (comma-separated if multiple)
# Example: HOSTNAME=yoto.example.com
HOSTNAME=

# Server deployment configuration
# Set USE_ENV_CREDENTIALS=true to disable the OAuth setup wizard and use credentials from this file
# This is useful for server deployments where multiple users share the same Yoto account
USE_ENV_CREDENTIALS=false

# Yoto API Credentials (only used when USE_ENV_CREDENTIALS=true)
# Get these from https://developer.yotoplay.com/
YOTO_CLIENT_ID=
YOTO_CLIENT_SECRET=

# Yoto API Tokens (obtained locally through OAuth flow)
# These are automatically managed by the application and stored locally
# Do not set these manually - they will be obtained during the OAuth process
# YOTO_ACCESS_TOKEN=(automatically managed)
# YOTO_REFRESH_TOKEN=(automatically managed)
